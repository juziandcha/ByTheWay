<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is title"/>
    <TextView
        android:id="@+id/content_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/release_user_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="release_user"/>
        <TextView
            android:id="@+id/receive_user_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="receive_user"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/no_use31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起点"/>

        <TextView
            android:id="@+id/saddress_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起点位置" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/no_use32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终点"/>
        <TextView
            android:id="@+id/eaddress_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终点位置"/>

    </LinearLayout>

    <TextView
        android:id="@+id/status_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task status"/>

</LinearLayout>
